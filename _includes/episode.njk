---
layout: html.njk
---

<stack-layout space="var(--s3)">
  <a href="/">
    <icon-layout>
      <svg>
        <use href="/assets/icons.svg#left"></use>
      </svg>
      Go home
    </icon-layout>
  </a>

  <header>
    <stack-layout space="var(--s0)">
      <h1>{{ title }}</h1>
      <dl>
        <dt>published</dt>
        <dd>{{ published | longData }}</dd>

        <dt>file size</dt>
        <dd>{{ length | filesize }}</dd>

        <dt>duration</dt>
        <dd>{{ duration | duration }}</dd>
      </dl>
    </stack-layout>
  </header>

  <div class="boxCard">
    <cluster-layout>
      <img src="{{ podcast.image }}" width="92" height="92" class="coverArt" />
      <figure>
        <audio controls src="{{ file }}"></audio>
        <figcaption>
          Listen to this episode, or
          <a href="{{ file }}" download>download it</a>
        </figcaption>
      </figure>
    </cluster-layout>
  </div>

  <section class="flow">
    <h2>
      <icon-layout>
        <svg>
          <use href="/assets/icons.svg#info"></use>
        </svg>
        Show notes
      </icon-layout>
    </h2>
    {{ content | safe }}
  </section>

  {% include 'subscribe.njk' %}
</stack-layout>
